<sxs>
    <scene root="demoRoot" axis_length="0"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30"/>
            <to x="0" y="-2" z="0"/>
        </perspective>
    </views>

    <ambient>
        <ambient r="0.1" g="0.2" b="0.2" a="1.0"/>
        <background r="0.0" g="0.0" b="0.0" a="1.0"/>
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
            <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>
    </lights>

    <textures>
        <texture id="leaves" file="scenes/images/leaves.jpg"/>
        <texture id="rocks" file="scenes/images/rocks.jpg"/>
        <texture id="grass" file="scenes/images/grass.jpg"/>
        <texture id="fire" file="scenes/images/fire.png"/>
        <texture id="canvas" file="scenes/images/canvas.jpg"/>
        <texture id="wood" file="scenes/images/trunk-image.jpg"/>

    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0"/>
            <ambient r="1.0" g="0.0" b="0.0" a="1.0"/>
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0"/>
            <specular r="0.6" g="0.0" b="0.0" a="1.0"/>
        </material>
    </materials>

    <transformations>


        <transformation id="raiseFoliage">
            <translate x="0" y="0" z="4.5"/>
        </transformation>



    </transformations>

    <primitives>

        <primitive id="demoRectangle">
            <rectangle x1="-2" y1="-2" x2="2" y2="2"/>
        </primitive>


        <primitive id="aSphere">
            <sphere radius="10" slices="12" stacks="12"/>
        </primitive>


        <primitive id="aCylinder">
            <cylinder base="0.5" top="0.3" height="5" slices="20" stacks="20"/>
        </primitive>

        <primitive id="aTorus">
            <torus inner="1" outer="3" slices="15" loops="7"/>
        </primitive>

        <primitive id="aTriangle">
            <triangle x1="1" y1="0" z1="0"
                      x2="0" y2="0" z2="1"
                      x3="0" y3="1" z3="0"/>
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <scale x="1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="rocks" length_s="0.1" length_t="0.3"/>
            <children>
                <componentref id="floor"/>
                <componentref id="forest"/>
                <componentref id="tent"/>
                <!--<componentref id="campfire"/>-->
            </children>
        </component>


        <component id="floor">
            <transformation>
                <translate x="1" y="1" z="0"/>
                <scale x="15" y="15" z="15"/>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="grass" length_s="0.1" length_t="0.3"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="tent">
            <transformation>
                <translate x="0" y="5" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="canvas" length_s="0.1" length_t="0.3"/>
            <children>
                <!-- leftside -->

                <componentref id="tentsideinner1"/>
                <componentref id="tentsideouter1"/>

                <!-- rightside -->
                <componentref id="tentsideinner2"/>
                <componentref id="tentsideouter2"/>
            </children>
        </component>


        <component id="tentsideinner1">
            <transformation>
                <translate x="0" y="0" z="0.7"/>
                <rotate axis="x" angle="225" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit" length_s="0.1" length_t="0.3"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>


        <component id="tentsideouter1">
            <transformation>
                <translate x="0" y="0" z="0.7"/>
                <rotate axis="x" angle="45" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit" length_s="0.1" length_t="0.3"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>


        <component id="tentsideinner2">
            <transformation>
                <translate x="0" y="1.41" z="0.7"/>
                <rotate axis="x" angle="-45" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit" length_s="0.1" length_t="0.3"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="tentsideouter2">
            <transformation>
                <translate x="0" y="1.41" z="0.7"/>
                <rotate axis="x" angle="135" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit" length_s="0.1" length_t="0.3"/>
            <children>
                <primitiveref id="demoRectangle"/>
            </children>
        </component>

        <component id="campfire">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="none" length_s="0.1" length_t="0.3"/>
            <children>
                <componentref id="campfireFire"/>
                <componentref id="campfireStones"/>
            </children>
        </component>

        <component id="campfireStones">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="aTorus"/>
            </children>
        </component>

        <component id="campfireFire">
            <transformation>
                <scale x="2" y="2" z="2"/>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="fire" length_s="0.1" length_t="0.3"/>
            <children>
                <componentref id="fire1"/>
                <componentref id="fire2"/>
                <componentref id="fire3"/>
            </children>
        </component>

        <component id="fire1">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit" length_s="0.1" length_t="0.3"/>
            <children>
                <primitiveref id="aTriangle"/>
            </children>
        </component>

        <component id="fire2">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit" length_s="0.1" length_t="0.3"/>
            <children>
                <primitiveref id="aTriangle"/>
            </children>
        </component>

        <component id="fire3">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit" length_s="0.1" length_t="0.3"/>
            <children>
                <primitiveref id="aTriangle"/>
            </children>
        </component>

        <component id="forest">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="leaves" length_s="0.1" length_t="0.3"/>
            <children>
                <componentref id="tree1"/>
                <componentref id="tree2"/>
                <componentref id="tree3"/>
            </children>
        </component>

        <component id="tree1">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="leaves" length_s="0.1" length_t="0.3"/>
            <children>
                <componentref id="treeTrunk"/>
                <componentref id="treeFoliage1"/>
            </children>
        </component>

        <component id="tree2">
            <transformation>
                <translate x="5" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="leaves" length_s="0.1" length_t="0.3"/>
            <children>
                <componentref id="treeTrunk"/>
                <componentref id="treeFoliage2"/>
            </children>
        </component>

        <component id="tree3">
            <transformation>
                <translate x="10" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="leaves" length_s="0.1" length_t="0.3"/>
            <children>
                <componentref id="treeTrunk"/>
                <componentref id="treeFoliage3"/>
            </children>
        </component>

        <component id="treeTrunk">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="wood" length_s="0.1" length_t="0.1"/>
            <children>
                <primitiveref id="aCylinder"/>
            </children>
        </component>

        <component id="treeFoliage1">
            <transformation>
                <scale x="4" y="4" z="1"/>
                <transformationref id="raiseFoliage" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="aCylinder"/>
            </children>
        </component>

        <component id="treeFoliage2">
            <transformation>
                <scale x="4" y="4" z="1"/>
                <transformationref id="raiseFoliage" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="aCylinder"/>
            </children>
        </component>

        <component id="treeFoliage3">
            <transformation>
                <scale x="4" y="4" z="1"/>
                <transformationref id="raiseFoliage" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="aCylinder"/>
            </children>
        </component>
    </components>

</sxs>